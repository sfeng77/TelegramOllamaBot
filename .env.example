# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Comma-separated list of allowed Telegram user IDs
ALLOWED_TELEGRAM_USER_IDS=123456789
DB_PATH=logs/conversations.db

# Enable or disable the experimental /websearch command
ENABLE_WEBSEARCH=1

# Number of top results to keep from Ollama web search
WEBSEARCH_MAX_RESULTS=5

# Optional: API key for Ollama web search (set if your setup requires it)
OLLAMA_API_KEY=

# Optional: Override the Ollama web search REST endpoint
OLLAMA_WEB_SEARCH_URL=http://localhost:11434/api/web_search
